<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaRestAPI.Continentes">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="0" CornerRadius="0">
            <Label Text="Información de Paises" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" Padding="0"/>
        </Frame>
        <Picker x:Name="PiNombres"
            Title="Seleccione un continente:" 
            SelectedIndexChanged="PiNombres_SelectedIndexChanged" FontAttributes="Bold" HorizontalOptions="Center" FontSize="Title"/>
    </StackLayout>
</ContentPage>